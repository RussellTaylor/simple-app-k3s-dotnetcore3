apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{MYNAME}}-app
  labels:
    app: simple-app
spec:
  replicas: 1
  selector:
    matchLabels:
      app: simple-app
  template:
    metadata:
      labels:
        app: simple-app
    spec:
      containers:
      - name: simple-app
        image: docker.io/thecrazyrussian/simple-app-dotnet:2
        imagePullPolicy: Always
        ports:
        - containerPort: 80
